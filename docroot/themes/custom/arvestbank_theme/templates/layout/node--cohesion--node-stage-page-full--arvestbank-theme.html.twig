{{ attach_library('arvestbank_theme/slider-splash-page') }}

{# Local admin tabs #}
<div class="coh-container-boxed">
  {{ content.arvestbank_theme_local_tasks }}
</div>

<div class="card-slider coh-style-page-node-type-stage-page">

  {# Left Sidebar #}
  <div class="coh-container-boxed">
    <div class="stage-page-left-side-blocks">

      {# External Login Block #}
      <div class="coh-style-my-accounts-login-block">
        {{ content.external_login_block }}
      </div>

      {# External Login Block #}
      <div class="coh-style-homepage-in-between-block">
        <h3>SWITCH TO ARVEST... IT'S EASY!</h3>
        <div class="flex-wrapper">
          <p>We've made switching to Arvest as easy as possible.</p>
          <div class="button-wrapper">
            <button>Get Started</button>
          </div>
        </div>
      </div>

      {# Wordpress Articles #}
      <div class="wordpress-block coh-style-wordpress-feed-block">
        {{ content.wordpress_articles }}
      </div>

      {# Stage Page Fields #}
      {% if content.body|render|trim is not empty %}
        <h2>{{ content.field_block_title|render }}</h2>
        <div class="left-block-content">
          {{ content.body|render }}
          <button>{{ content.field_block_button|render }}</button>
        </div>
      {% endif %}


    </div>
  </div>

  <div class="glide">

    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides">
        <li class="glide__slide">
          <div class="slide-background position-{{ content.field_slide1_bg_position.0 }}" style="background-image: url('{{ content.field_slide_one|render|striptags|trim }}')">
            <div class="left-block-padding coh-container-boxed cta-container">
              <div class="slide-cta color-{{ content.field_slide1_cta_color.0 }} position-{{ content.field_slide1_cta_position.0 }}">
                <span class="text1">{{ content.field_slide_one_cta_text|render }}</span>
                {% if content.field_slide1_cta_link|render|trim is not empty %}
                  <button>{{ content.field_slide1_cta_link|render }}</button>
                {% endif %}
              </div>
            </div>
          </div>
        </li>
        <li class="glide__slide">
          <div class="slide-background position-{{ content.field_slide2_bg_position.0 }}" style="background-image: url('{{ content.field_slide_two|render|striptags|trim }}')">
            <div class="left-block-padding coh-container-boxed cta-container">
              <div class="slide-cta color-{{ content.field_slide2_cta_color.0 }} position-{{ content.field_slide2_cta_position.0 }}">
                <span class="text1">{{ content.field_slide_two_cta_text|render }}</span>
                {% if content.field_slide2_cta_link|render|trim is not empty %}
                  <button>{{ content.field_slide2_cta_link|render }}</button>
                {% endif %}
              </div>
            </div>
          </div>
        </li>
        <li class="glide__slide">
          <div class="slide-background position-{{ content.field_slide3_bg_position.0 }}" style="background-image: url('{{ content.field_slide_three|render|striptags|trim }}')">
            <div class="left-block-padding coh-container-boxed cta-container">
              <div class="slide-cta color-{{ content.field_slide3_cta_color.0 }} position-{{ content.field_slide3_cta_position.0 }}">
                <span class="text1">{{ content.field_slide_three_cta_text|render }}</span>
                {% if content.field_slide3_cta_link|render|trim is not empty %}
                  <button>{{ content.field_slide3_cta_link|render }}</button>
                {% endif %}
              </div>
            </div>
          </div>
        </li>
        <li class="glide__slide">
          <div class="slide-background position-{{ content.field_slide4_bg_position.0 }}" style="background-image: url('{{ content.field_slide_four|render|striptags|trim }}')">
            <div class="left-block-padding coh-container-boxed cta-container">
              <div class="slide-cta color-{{ content.field_slide4_cta_color.0 }} position-{{ content.field_slide4_cta_position.0 }}">
                <span class="text1">{{ content.field_slide_four_cta_text|render }}</span>
                {% if content.field_slide4_cta_link|render|trim is not empty %}
                  <button>{{ content.field_slide4_cta_link|render }}</button>
                {% endif %}
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="left-block-padding glide__bullets" data-glide-el="controls[nav]">
      <div class="glide_pager" data-glide-dir="=0">
        <div class="only-show-on-desktop">
          {{ content.field_icon_one|render }}
          {{ content.field_icon_one_text|render }}</div>
      </div>
      <div class="glide_pager" data-glide-dir="=1">
        <div class="only-show-on-desktop">
          {{ content.field_icon_two|render }}
          {{ content.field_icon_two_text|render }}
        </div>
      </div>
      <div class="glide_pager" data-glide-dir="=2">
        <div class="only-show-on-desktop">
          {{ content.field_icon_three|render }}
          {{ content.field_icon_three_text|render }}
        </div>
      </div>
      <div class="glide_pager" data-glide-dir="=3">
        <div class="only-show-on-desktop">
          {{ content.field_icon_four|render }}
          {{ content.field_icon_four_text|render }}
        </div>
      </div>
    </div>

  </div>

</div>
