{{ attach_library('arvestbank_theme/slider-splash-page') }}

<div class="card-slider">

  <div class="glide">

    <div class="glide__arrows" data-glide-el="controls">
      <button class="glide__arrow glide__arrow--left" data-glide-dir="<" aria-label="Prev"></button>
      <button class="glide__arrow glide__arrow--right" data-glide-dir=">" aria-label="Next"></button>
    </div>

    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides">
        <li class="glide__slide">{{ content.field_slide_one|render }}</li>
        <li class="glide__slide">{{ content.field_slide_two|render }}</li>
        <li class="glide__slide">{{ content.field_slide_three|render }}</li>
        <li class="glide__slide">{{ content.field_slide_four|render }}</li>
      </ul>
    </div>

    <div class="glide__bullets" data-glide-el="controls[nav]">
      <div class="glide_pager" data-glide-dir="=0">
        {{ content.field_icon_one|render }}
        {{ content.field_icon_one_text|render }}
      </div>
      <div class="glide_pager" data-glide-dir="=1">
        {{ content.field_icon_two|render }}
        {{ content.field_icon_two_text|render }}
      </div>
      <div class="glide_pager" data-glide-dir="=2">
        {{ content.field_icon_three|render }}
        {{ content.field_icon_three_text|render }}
      </div>
      <div class="glide_pager" data-glide-dir="=3">
        {{ content.field_icon_four|render }}
        {{ content.field_icon_four_text|render }}
      </div>
    </div>

  </div>

</div>
